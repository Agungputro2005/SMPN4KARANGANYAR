<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menuactivity"
    android:background="#FDFDFC">

    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/gurudanstaf"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/myImageViewText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/gbr1"
        android:layout_alignTop="@+id/gbr1"
        android:layout_alignRight="@+id/gbr1"
        android:layout_alignBottom="@+id/gbr1"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="GURU DAN STAF"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-267dp"
        android:layout_toRightOf="@id/myImageViewText"
        android:paddingTop="@android:dimen/app_icon_size"
        android:src="@drawable/perempuan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gbr1"
        android:layout_alignTop="@+id/gbr1"
        android:layout_alignRight="@+id/gbr1"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@id/iv_menu"
        android:text="NAMA GURU,NIP,MATAPELAJARAN"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:background="@drawable/putro"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="-267dp"
        android:layout_toRightOf="@id/myImageViewText"
        android:paddingTop="@android:dimen/app_icon_size"
        android:src="@drawable/laki"
        android:layout_marginTop="450dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gbr1"
        android:layout_alignTop="@+id/gbr1"
        android:layout_alignRight="@+id/gbr1"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="540dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@id/iv_menu"
        android:text="NAMA GURU,NIP,MATAPELAJARAN"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:background="@drawable/putro"/>



</RelativeLayout>
