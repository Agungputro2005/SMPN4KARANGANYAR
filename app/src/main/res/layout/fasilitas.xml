<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="#FBFBFA">

    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/perpustakaan"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/myImageViewText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:gravity="center"
        android:text="PERPUSTAKAAN"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:paddingTop="30dp"
        android:text="Fasilitas ruang perpustakaan beruparak buku-buku perpustakaan siswa,meja dan kursi layanan,meja dan kursi baca,serta perangkat tempat dan alat produksi bahan pustaka."
        android:textColor="@color/black"
        android:typeface="monospace"
        android:background="@drawable/putro" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".menuactivity">

        <ImageView
            android:id="@+id/iv_mushola"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="310dp"
            android:src="@drawable/masjid" />

        <TextView
            android:id="@+id/textmushola"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="470dp"
            android:gravity="center"
            android:text="MASJID"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="480dp"
            android:background="@drawable/putro"
            android:paddingTop="20dp"
            android:text="Ibadah adalah kebutuhan dasar setiap kaum muslim dan seiring dengan bertambahnya jumlah siswa siswi di SMPN 4 KARANGNYAR yang sebagian beragama Islam berimbas pada kebutuhan sarana ibadah berupa Masjid."
            android:textColor="@color/black"
            android:typeface="monospace" />
    </RelativeLayout>
</RelativeLayout>
