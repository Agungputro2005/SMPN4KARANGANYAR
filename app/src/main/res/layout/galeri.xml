        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/sehatdua"
        android:background="@drawable/sehattiga"
        android:backgroundTint="#ACAA9A"
        android:gravity="center">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sehattiga">

        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sehatempat"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/sehattiga"
        android:background="@drawable/sehatempat"
        android:backgroundTint="#ACAA9A"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sehatenam">

        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sehatlima"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_toRightOf="@+id/sehatempat"
        android:background="@drawable/bakron"
        android:orientation="horizontal">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="00dp">


    </LinearLayout>

</RelativeLayout>

</HorizontalScrollView>


<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="50dp"
android:orientation="vertical"
android:layout_marginBottom="100dp">

<TextView
    android:layout_width="match_parent"
    android:layout_height="580dp"
    android:background="@drawable/bakron"
